pipeline {
    agent any
    stages 
    {
        stage('preparations') 
        {
            steps 
            {
                // Get some code from a GitHub repository
                git 'https://github.com/jirivasm/Project1'
                sh "sudo docker system prune -af"
            }
        }
        stage('versions')
        {
            steps
            {
                sh "jenkins --version"
                sh "docker --version"
                sh "python3 --version"
                
            }
        }
        stage('build docker image and container')
        {
            steps
            {
                sh "sudo docker build . -t flaskapp:V1.0"
                //sh "sudo docker run -d -p 5000:5000 --name flask-app alpine-image"
                sh " sudo docker ps"
            }
        }
        stage('push docker image to hub')
        {
             steps
             {
                 withCredentials[string(credentialsId: '1b9f0e78-d442-447f-840c-54ac3ff4fbd5', variable: 'dockerhubpass')]
                {
                    sh "sudo docker login -u jirivasm -p ${dockerhubpass}"
                }
                 sh "docker push flaskapp:V1.0"
             }
        }
        stage('run docker')
        {
            steps
            {
                sh "sudo docker run -d -p 5000:5000 flaskapp:V1.0"
                sh "sudo docker ps"
            }
        }
        // stage('build venv and install requirements')
